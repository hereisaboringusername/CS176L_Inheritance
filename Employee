package labproject6.persons;
public class Employee extends Person {

	//Insert your instance variables
	private String officeNumber;
	private double salary;
	

//Methods:
//An Employee has an office number (String), and salary (double).
//Write the setOfficeNumber and setSalary methods for office number and salary.

	//This method sets the office number
	public void setOfficeNumber (String number) {
		officeNumber = number;
	}
//This method sets the salary.	
	public void setSalary (double money) {
		salary = money;
	}
	
	@Override
	public String toString() {
		return super.toString() + "\n" +
				"Office Number: " + officeNumber + "\n" +
				"Salary: " + salary;
	}
 

}
